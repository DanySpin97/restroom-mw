{
  "private": true,
  "name": "restroom-mw",
  "repository": "https://github.com/dyne/restroom-mw",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prerelease": "yarn build && yarn doc && git add docs && git commit -m 'docs: 📚️ 📝 Update docs'",
    "release": "npm whoami && lerna publish",
    "release:next": "lerna publish --canary -y --pre-dist-tag next --preid $(git rev-parse --short HEAD)",
    "c": "gacp --emoji emoji --add false",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint:fix",
    "pretest": "yarn build",
    "test": "c8 ava",
    "watch:test": "ava -s --watch",
    "watch": "lerna run watch --parallel",
    "build": "lerna run build --parallel --include-dependencies",
    "serve": "babel-watch test/fixtures/server.js",
    "doc": "lerna run doc"
  },
  "ava": {
    "failFast": true,
    "verbose": true,
    "babel": true,
    "timeout": "1m",
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "reporter": [
      "lcovonly",
      "text"
    ],
    "lines": 85,
    "check-coverage": true
  },
  "husky": {
    "hooks": {
      "commit-msg": "devmoji -e",
      "pre-commit": "yarn test"
    }
  },
  "devDependencies": {
    "@ava/babel": "^1.0.1",
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/register": "^7.12.1",
    "@types/body-parser": "^1.19.0",
    "@types/cbor": "^5.0.1",
    "@types/express": "^4.17.9",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/validator": "^13.1.0",
    "ava": "^3.13.0",
    "babel-watch": "^7.0.0",
    "c8": "^7.3.5",
    "cbor": "^5.1.0",
    "cypress": "^6.0.1",
    "devmoji": "^2.1.12",
    "documentation": "^13.0.2",
    "errorhandler": "^1.5.1",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^5.0.0",
    "gacp": "^2.10.2",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "morgan": "^1.10.0",
    "prettier": "^2.2.1",
    "qs": "^6.9.4",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.0",
    "start-server-and-test": "^1.11.6",
    "supertest": "^6.0.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5",
    "zenroom": "^2.1.0"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "dependencies": {
    "@babel/preset-env": "^7.12.7"
  }
}
